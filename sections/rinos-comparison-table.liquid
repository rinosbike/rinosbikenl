                <td class="section-11-td">{{ 'bikes.sandman7.brakes' | t }}</td>
              </tr>
              <tr class="section-11-tr">
                <td class="section-11-td-1">{{ 'bikes.wheelSize_label' | t }}</td>
                <td class="section-11-td">{{ 'bikes.sandman1.wheelSize' | t }}</td>
