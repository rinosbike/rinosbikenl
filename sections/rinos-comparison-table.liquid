                <td class="section-11-td specific-column">{{ 'bikes.sandman4.frame' | t }}</td>
                <td class="section-11-td">{{ 'bikes.sandman5.frame' | t }}</td>
                <td class="section-11-td">{{ 'bikes.sandman6.frame' | t }}</td>
                <td class="section-11-td">{{ 'bikes.sandman7.frame' | t }}</td>
              </tr>
              <tr class="section-11-tr">
                <td class="section-11-td-1">{{ 'bikes.frameSize_label' | t }}</td>
